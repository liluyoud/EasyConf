CHATWOOT_HUB_URL=https://{{EASY_SUFIX}}{{EASY_CHATWOOT}}.{{EASY_DOMAIN}}
INSTALLATION_NAME=Chatwoot
NODE_ENV=production
RAILS_ENV=production
INSTALLATION_ENV=docker
SECRET_KEY_BASE={{EASY_KEY}}
FRONTEND_URL={{EASY_SUFIX}}{{EASY_CHATWOOT}}.{{EASY_DOMAIN}}
DEFAULT_LOCALE=pt_BR
TZ=America/La_Paz
FORCE_SSL=false
ENABLE_ACCOUNT_SIGNUP=false

# Databases
REDIS_URL=redis://default:{{EASY_PASSWORD}}@{{EASY_PROJECT}}_redis:6379/{{EASY_REDIS_CHATWOOT}}
POSTGRES_HOST={{EASY_PROJECT}}_postgres
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD={{EASY_PASSWORD}}
POSTGRES_DATABASE=chatwoot
RAILS_LOG_TO_STDOUT=true
USE_INBOX_AVATAR_FOR_BOT=true

# Storage
ACTIVE_STORAGE_SERVICE=s3_compatible #local
STORAGE_BUCKET_NAME=chatwoot
STORAGE_ACCESS_KEY_ID={{EASY_MINIO_KEY}}
STORAGE_SECRET_ACCESS_KEY={{EASY_MINIO_ACCESS}}
STORAGE_REGION=en-east-1
STORAGE_ENDPOINT=https://{{EASY_SUFIX}}{{EASY_MINIO_S3}}.{{EASY_DOMAIN}}
STORAGE_FORCE_PATH_STYLE=true

# Performance
SIDEKIQ_CONCURRENCY=10
RACK_TIMEOUT_SERVICE_TIMEOUT=0
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2
ENABLE_RACK_ATTACK=false

# Dados do SMTP
MAILER_SENDER_EMAIL={{EASY_SMTP_SENDER}}
SMTP_DOMAIN={{EASY_DOMAIN}}
SMTP_ADDRESS={{EASY_SMTP_HOST}}
SMTP_PORT={{EASY_SMTP_PORT}}
SMTP_SSL={{EASY_SMTP_SSL}}
SMTP_USERNAME={{EASY_SMTP_USERNAME}}
SMTP_PASSWORD={{EASY_SMTP_PASSWORD}}
SMTP_AUTHENTICATION=login
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_OPENSSL_VERIFY_MODE=peer
MAILER_INBOUND_EMAIL_DOMAIN={{EASY_SMTP_USERNAME}}